# Railway Environment Variables Template
# Copy this file to .env.railway and configure for your deployment

# ============================================
# CORE APPLICATION SETTINGS
# ============================================

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=${RAILWAY_PUBLIC_DOMAIN}

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL - Automatically provided by Railway
# DATABASE_URL=${DATABASE_URL}

# TimescaleDB (if using separate instance)
# TIMESCALE_HOST=
# TIMESCALE_PORT=5432
# TIMESCALE_DATABASE=zeal_traces
# TIMESCALE_USER=
# TIMESCALE_PASSWORD=

# ============================================
# REDIS CONFIGURATION
# ============================================

# Redis - Automatically provided by Railway
# REDIS_URL=${REDIS_URL}

# ============================================
# CRDT SERVER CONFIGURATION
# ============================================

NEXT_PUBLIC_CRDT_SERVER_URL=wss://${RAILWAY_PUBLIC_DOMAIN}/crdt
CRDT_SERVER_PORT=8080
CRDT_MAX_CLIENTS_PER_ROOM=100
CRDT_CLIENT_TIMEOUT_MINUTES=30
CRDT_DISABLE_REDIS_PERSISTENCE=false

# ============================================
# AUTHENTICATION
# ============================================

# NextAuth Configuration
NEXTAUTH_URL=https://${RAILWAY_PUBLIC_DOMAIN}
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl

# OAuth Providers (optional)
# GitHub OAuth
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Auth0
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=
# AUTH0_ISSUER=

# ============================================
# STORAGE CONFIGURATION
# ============================================

# Storage Type: 'local' | 's3' | 'r2' | 'gcs'
STORAGE_TYPE=local
STORAGE_PATH=/app/storage

# AWS S3 (if using S3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=zeal-uploads

# Cloudflare R2 (if using R2)
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET_NAME=zeal-uploads
# R2_PUBLIC_URL=

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# Email Provider: 'sendgrid' | 'ses' | 'smtp' | 'resend'
# EMAIL_PROVIDER=sendgrid

# SendGrid
# SENDGRID_API_KEY=

# AWS SES
# AWS_SES_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@example.com

# SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@example.com

# Resend
# RESEND_API_KEY=

# ============================================
# AI INTEGRATIONS (Optional)
# ============================================

# Enable AI Features
ENABLE_AI_FEATURES=false

# OpenRouter (for LLM features)
# OPENROUTER_API_KEY=
# OPENROUTER_MODEL=anthropic/claude-3-haiku-20240307

# OpenAI
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
# ANTHROPIC_API_KEY=
# ANTHROPIC_MODEL=claude-3-opus-20240229

# AI Service URLs (if using separate services)
# OPENAI_FUNCTIONS_URL=
# MCP_SERVER_URL=

# ============================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================

# Enable Monitoring
ENABLE_MONITORING=false
ENABLE_TRACING=false

# Datadog
# DD_API_KEY=
# DD_SITE=datadoghq.com
# DD_ENV=production
# DD_SERVICE=zeal
# DD_VERSION=1.0.0

# New Relic
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=zeal
# NEW_RELIC_LOG_LEVEL=info

# Sentry
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Honeycomb
# HONEYCOMB_API_KEY=
# HONEYCOMB_DATASET=zeal

# ============================================
# FEATURE FLAGS
# ============================================

# Collaboration Features
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_MAX_COLLABORATORS=10

# Flow Tracing
NEXT_PUBLIC_ENABLE_FLOW_TRACING=true
NEXT_PUBLIC_TRACE_RETENTION_DAYS=30

# Version History
NEXT_PUBLIC_ENABLE_VERSION_HISTORY=true
NEXT_PUBLIC_VERSION_HISTORY_LIMIT=100

# AI Features
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=false
NEXT_PUBLIC_ENABLE_AUTO_OPTIMIZATION=false
NEXT_PUBLIC_ENABLE_SMART_DEBUGGING=false

# ============================================
# RATE LIMITING & SECURITY
# ============================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=https://${RAILWAY_PUBLIC_DOMAIN}

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Worker Configuration
WORKER_THREADS=4
WORKER_TIMEOUT_MS=30000

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Log Level: 'error' | 'warn' | 'info' | 'debug' | 'trace'
LOG_LEVEL=info

# Development Tools
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_API_DOCS=false

# ============================================
# RAILWAY-SPECIFIC
# ============================================

# Railway automatically provides these variables:
# RAILWAY_PUBLIC_DOMAIN - Your app's public domain
# RAILWAY_PROJECT_ID - Project identifier
# RAILWAY_ENVIRONMENT - Current environment
# RAILWAY_GIT_COMMIT_SHA - Deployment commit SHA
# RAILWAY_GIT_BRANCH - Deployment branch
# PORT - Port to listen on (usually 3000)