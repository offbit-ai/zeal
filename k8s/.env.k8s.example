# Zeal Kubernetes Deployment Environment Variables
# Copy this file to .env.k8s and fill in your values

# Basic Configuration
ZEAL_NAMESPACE=zeal
ZEAL_DOMAIN=zeal.yourdomain.com

# Container Images
ZEAL_NEXTJS_IMAGE=myregistry/zeal-nextjs:latest
ZEAL_CRDT_IMAGE=myregistry/zeal-crdt:latest
ZEAL_REDIS_IMAGE=redis:7-alpine

# Scaling Configuration
ZEAL_NEXTJS_REPLICAS=3
ZEAL_CRDT_REPLICAS=2

# Database Configuration
ZEAL_USE_SUPABASE=false
ZEAL_DATABASE_URL=postgresql://user:password@host:5432/database

# If using Supabase, uncomment and fill these:
# ZEAL_SUPABASE_URL=https://xxx.supabase.co
# ZEAL_SUPABASE_ANON_KEY=your-anon-key
# ZEAL_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
ZEAL_NEXTAUTH_SECRET=your-nextauth-secret-here

# TLS Configuration
ZEAL_ENABLE_TLS=true
ZEAL_CLUSTER_ISSUER=letsencrypt-prod