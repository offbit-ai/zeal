# Next.js specific environment variables
# Copy this file to .env.local and update with your values

# Database Configuration
DATABASE_URL="postgresql://zeal_user:zeal_password@localhost:5432/zeal_db?schema=public"

# Redis Configuration (for local development)
REDIS_PASSWORD=redispass123

# CRDT Server URL (Rust server)
NEXT_PUBLIC_CRDT_SERVER_URL=ws://localhost:8080

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_FLOW_TRACING=true
NEXT_PUBLIC_ENABLE_VERSION_HISTORY=true

# Development flags
NEXT_PUBLIC_DEBUG_CRDT=false
NEXT_PUBLIC_VERBOSE_LOGGING=false
NEXT_PUBLIC_DISABLE_CONSOLE_LOGS=false

# Optional: Analytics
NEXT_PUBLIC_GA_ID=