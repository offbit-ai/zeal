    "directory": "packages/zeal-sdk"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "socket.io-client": "^4.0.0"
