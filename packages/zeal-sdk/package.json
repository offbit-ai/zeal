{
  "name": "@offbit-ai/zeal-sdk",
  "version": "1.0.2",
  "description": "TypeScript SDK for Zeal Integration Protocol (ZIP)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
