{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "index.ts",
    "../../services/node-template-repository/**/*.ts",
    "../../lib/database.ts",
    "../../lib/database/**/*.ts",
    "../../lib/database-template-operations.ts",
    "../../lib/supabase/client.ts",
    "../../data/nodeTemplates/**/*.ts",
    "../../types/api.ts",
    "../../types/workflow.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
