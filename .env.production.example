# Production Environment Variables Example
# Copy this to .env.production for production deployments

# Database
DATABASE_URL=postgresql://zeal:zeal_password@postgres:5432/zeal_db?schema=public
POSTGRES_USER=zeal
POSTGRES_PASSWORD=zeal_password
POSTGRES_DB=zeal_db

# Redis
REDIS_URL=redis://:redis_password@redis:6379
REDIS_PASSWORD=redis_password

# CRDT Server
# For production, this should be the public URL of your CRDT server
# If using the same domain with path routing: wss://yourdomain.com/ws
# If using subdomain: wss://crdt.yourdomain.com
# For local testing with Docker: ws://localhost:8080
NEXT_PUBLIC_CRDT_SERVER_URL=ws://localhost:8080
CORS_ORIGIN=http://localhost:3000
MAX_CLIENTS_PER_ROOM=100
CLIENT_TIMEOUT_MINUTES=30
DISABLE_REDIS_PERSISTENCE=false

# NextAuth Configuration
# Update these for your production domain
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DISABLE_CONSOLE_LOGS=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# Rust Server Logging
RUST_LOG=info

# MinIO S3-Compatible Storage
# For production, update these with your MinIO/S3 configuration
MINIO_ENDPOINT=minio:9000  # Internal Docker/K8s endpoint
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=zeal-uploads
MINIO_USE_SSL=true  # Enable SSL in production
NEXT_PUBLIC_MINIO_URL=https://s3.yourdomain.com  # Public URL for MinIO/S3